<Window x:Class="Schrabber.Windows.PartsGeneratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schrabber.Windows"
        mc:Ignorable="d"
        Title="PartsGeneratorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <local:HighlightTextBox
            Grid.Column="0"
            Text="Hello you!! {Hello you!!} And also hello to you!"
            TextWrapping="Wrap"
            AcceptsReturn="True"
        >
            <local:HighlightTextBox.HighlightRules>
                <local:HighlightRule Brush="Green" MatchText="({.*?})"/>
            </local:HighlightTextBox.HighlightRules>
        </local:HighlightTextBox>
    </Grid>
</Window>
