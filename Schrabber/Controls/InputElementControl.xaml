<UserControl x:Class="Schrabber.Controls.InputElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrabber.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="148"
             d:DesignWidth="800"
             MaxHeight="148"
             Height="148">
    <Grid>
        <Image
            Name="ThumbnailImage"
            HorizontalAlignment="Left"
            Width="128"
            Margin="10,10,0,10"
            Source="/Schrabber;component/resources/no_cover.jpg"
        />

        <Button
            Name="SplitButton"
            Content="Split"
            HorizontalAlignment="Right"
            Margin="0,10,10,74"
            Width="128"
            Click="SplitButton_Click"
        />

        <TextBlock
            Name="InformationTextBlock"
            Margin="143,10"
        />

        <Button
            Content="Delete"
            Margin="0,79,10,10"
            Click="DeleteButton_Click" HorizontalAlignment="Right" Width="128"/>
    </Grid>
</UserControl>
