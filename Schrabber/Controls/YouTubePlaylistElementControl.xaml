<UserControl x:Class="Schrabber.Controls.YouTubePlaylistElementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Schrabber.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="148"
             d:DesignWidth="800"
             MaxHeight="84"
             Height="84">
    <Grid>
        <Image
            Name="ThumbnailImage"
            HorizontalAlignment="Left"
            Width="84"
            Margin="10,00,0,00"
            Source="/Schrabber;component/resources/no_cover.jpg"
        />

        <TextBlock
            Name="InformationTextBlock"
            Margin="99,10,143,10"
            TextTrimming="WordEllipsis"
        />

        <Button
            Name="ToggleKeepButton"
            Content="        Keep&#10;&#10;(Click to toggle)"
            HorizontalAlignment="Right"
            Margin="0,10,10,10"
            Width="128"
            Click="ToggleKeepButton_Click"
        />
    </Grid>
</UserControl>
